//            "matrix" : "dat/link-sims.matrix",
//            "basedOn" : "article-links",
//            "transpose" : "dat/link-sims.transpose.matrix",
//        },
//        "pairwise-cats" : {
//            "type" : "pairwise",
//            "matrix" : "dat/cat-sims.matrix",
//            "basedOn" : "article-cats",
//            "transpose" : "dat/cat-sims.transpose.matrix",
//        },
        "ensemble" : {
            "model" : "dat/model.out",
            "type" : "ensemble"
        },
    }
}
